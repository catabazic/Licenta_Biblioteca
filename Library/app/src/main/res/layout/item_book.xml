<!-- item_chat_message.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/wholeBookLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5BFFFFFF"
    android:gravity="center|top"
    android:minHeight="70dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/no_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="clip_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/BooksBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Litera stacojie"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/BooksBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="NATHANIEL HAWTHORNE" />

        <TextView
            android:id="@+id/BooksBookState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Stare: Imprumut pana pe data de 15.06.2024" />

        <TextView
            android:id="@+id/BooksBookState2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>
</LinearLayout>