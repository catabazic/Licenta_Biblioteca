<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/TextMessageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/frame_message"
        android:backgroundTint="#856750A3"
        android:backgroundTintMode="src_in"
        android:maxWidth="500dp"
        android:padding="15dp"
        android:text="Exactly! It's a win-win. Alright, let's get this plan into motion. Sarah's in for the birthday surprise of a lifetime!"
        android:textSize="20sp" />

</LinearLayout>

