                app:layout_constraintBottom_toTopOf="@+id/progressBar4"
                app:layout_constraintEnd_toStartOf="@+id/progressBar5"
                app:layout_constraintTop_toTopOf="@+id/progressBar5"
                app:srcCompat="@drawable/ic_star_full" />

            <TextView
                android:id="@+id/bookRatingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Ratings"
                android:textColor="#6A6469"
                app:layout_constraintEnd_toEndOf="@+id/BookRating"
                app:layout_constraintStart_toStartOf="@+id/BookRating"
                app:layout_constraintTop_toBottomOf="@+id/BookRating" />

            <TextView
                android:id="@+id/RatingsAndReviewsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Ratings &amp; Reviews"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/BookRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="2,5"
                android:textColor="#6A6469"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/RatingsAndReviewsTxt"
                app:layout_constraintTop_toBottomOf="@+id/RatingsAndReviewsTxt" />

            <TextView
                android:id="@+id/SeeAllRatingsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="See all"
                android:textColor="#6750A3"
                app:layout_constraintBottom_toBottomOf="@+id/RatingsAndReviewsTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/RatingsAndReviewsTxt" />

